    <div id="result-display">Ready to Spin?</div>

    <button class="spin-btn" onclick="startSpin()">Spin Wheel</button>

    <div class="fire-bg"></div>

    <script>
        let isSpinning = false;
        let currentDegree = 0;

        // Reward Positions (Adjusted for your 8-segment wheel)
        const rewards = [
            { name: "50 DIAMONDS", minDeg: 337.5, maxDeg: 22.5 },
            { name: "100 DIAMONDS", minDeg: 292.5, maxDeg: 337.5 },
            { name: "CUSTOM ROOM", minDeg: 247.5, maxDeg: 292.5 },
            { name: "SURPRISE REWARD", minDeg: 202.5, maxDeg: 247.5 },
            { name: "RISK ZONE âš ï¸", minDeg: 157.5, maxDeg: 202.5 },
            { name: "BETTER LUCK NEXT TIME", minDeg: 112.5, maxDeg: 157.5 },
            { name: "10 TAKA", minDeg: 67.5, maxDeg: 112.5 },
            { name: "25 DIAMONDS", minDeg: 22.5, maxDeg: 67.5 }
        ];

        function startSpin() {
            if (isSpinning) return;
            
            isSpinning = true;
            document.getElementById('result-display').innerText = "Spinning...";
            
            // Generate random spin (at least 5 full rotations)
            const randomExtra = Math.floor(Math.random() * 360);
            const totalSpin = 1800 + randomExtra; 
            currentDegree += totalSpin;

            const wheel = document.getElementById('wheel-img');
            wheel.style.transform = `rotate(${currentDegree}deg)`;

            // Wait for animation to finish (5 seconds)
            setTimeout(() => {
                isSpinning = false;
                calculateWinner(currentDegree % 360);
            }, 5000);
        }

        function calculateWinner(deg) {
            // Adjust degree to pointer position (Top center is 0)
            let actualDeg = (360 - deg) % 360;
            
            let winner = "Better Luck!";
            
            // Simple logic to find which segment the pointer is on
            for (let r of rewards) {
                if (r.name === "50 DIAMONDS") {
                    if (actualDeg >= 337.5 || actualDeg < 22.5) {
                        winner = r.name;
                        break;
                    }
                } else if (actualDeg >= r.minDeg && actualDeg < r.maxDeg) {
                    winner = r.name;
                    break;
                }
            }
            
            document.getElementById('result-display').innerText = "WINNER: " + winner;
        }
    </script>
